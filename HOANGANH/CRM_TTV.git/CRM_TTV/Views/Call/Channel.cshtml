@{
    ViewBag.Title = "Loại cuộc gọi";
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>Call Type</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BREADCRUMB -->
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <a href="index.html">Home</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span class="active">Page Layouts</span>
        </li>
    </ul>
    <!-- END PAGE BREADCRUMB -->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-default" href="@Url.Action("NameType", "CategoryManage")"><i class="fa fa-refresh"></i>&nbsp;Nạp</a>
                <button class="btn btn-primary" onclick="addRow2Colum()" id="btnAdd"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" onclick="updateRow2Colum()" id="btnEdit"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" onclick="confirm('Bạn có chắc chắn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                <button class="btn green" href="@Url.Action("NameType", "CategoryManage")" id="btnSave"><i class="fa fa-floppy-o"></i>&nbsp;Lưu</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format">
                        <table class="table table-striped table-bordered table-hover table-addrow">
                            <thead>
                                <tr>
                                    <th id="ID" hidden="hidden"></th>
                                    <th class="table-checkbox">
                                        <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                    </th>
                                    <th>STT</th>
                                    <th>Hình thức</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <input type="checkbox" id="cb1" name="cb" onclick="CheckSelect()" />
                                    </td>
                                    <td>1</td>
                                    <td>
                                        Hotline
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" id="cb2" name="cb" onclick="CheckSelect()" />
                                    </td>
                                    <td>2</td>
                                    <td>
                                        Facebook

                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" id="cb2" name="cb" onclick="CheckSelect()" />
                                    </td>
                                    <td>2</td>
                                    <td>
                                        Email
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <input type="checkbox" id="cb2" name="cb" onclick="CheckSelect()" />
                                    </td>
                                    <td>2</td>
                                    <td>
                                        Live chat
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- END PAGE BASE CONTENT -->
</div>


@section scripts{
    <script>
        function addRow2Colum() {
            $("table.table-addrow tbody").append("<tr><td><input type='checkbox' id='cb' name='cb' onclick='CheckSelect()' /></td>"
                + "<td></td><td><input type='text' value='' class='form-control' /></td></tr>");
            $("#btnSave").removeAttr("disabled", "disabled");
        }

        function updateRow2Colum() {
            $('tbody tr td').find("input:checkbox").each(function () {
                if (this.checked) {
                    var tr = $(this).closest("tr").find("td:last");
                    var text = tr.text();
                    tr.text("");
                    tr.append("<input type='text' value='" + text + "' class='form-control' />");
                }
            });
            $("#btnAdd").attr("disabled", "disabled");
        }
    </script>
}