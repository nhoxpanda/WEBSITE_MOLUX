@{
    ViewBag.Title = "Phản hồi của khách hàng";
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>PHẢN HỒI CỦA KHÁCH HÀNG</h1>
        </div>
        <!-- END PAGE TITLE -->

    </div>
    <!-- END PAGE HEAD-->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <button class="btn btn-default"><i class="fa fa-refresh"></i>&nbsp;Nạp</button>
                <button class="btn btn-primary" id="btnAdd" href="#modal-insert-review" data-toggle="modal"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
                <button class="btn btn-warning" id="btnEdit" href="#modal-edit-review" data-toggle="modal"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>
                <button class="btn btn-danger" id="btnRemove" onclick="confirm('Bạn có chắc chắn muốn xóa không?');"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
            </div>
        </div>
    </div>
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="table-checkbox">
                                        <input type="checkbox" id="allcb" name="allcb" />
                                    </th>
                                    <th id="TAXCODE">
                                        STT
                                        <a href="#" id="sortasc1" onclick="clickSortASC(1)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a href="#" id="sortdesc1" onclick="clickSortDESC(1)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>
                                    <th id="COMPANY">
                                        Mã khách hàng
                                        <a href="#" id="sortasc2" onclick="clickSortASC(2)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a href="#" id="sortdesc2" onclick="clickSortDESC(2)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>
                                    <th id="JOB">
                                        Tên khách hàng
                                        <a href="#" id="sortasc3" onclick="clickSortASC(3)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a href="#" id="sortdesc3" onclick="clickSortDESC(3)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>
                                    <th id="ADDRESS">
                                        Ngày đánh giá
                                        <a href="#" id="sortasc4" onclick="clickSortASC(4)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a href="#" id="sortdesc4" onclick="clickSortDESC(4)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>
                                    <th id="CITY">
                                        Tour
                                        <a href="#" id="sortasc5" onclick="clickSortASC(5)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a href="#" id="sortdesc5" onclick="clickSortDESC(5)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>
                                    <th id="WEBSITE">
                                        Đánh giá
                                        <a href="#" id="sortasc9" onclick="clickSortASC(9)" class="icon-sort-table"><i class="fa fa-sort-asc"></i></a>
                                        <a href="#" id="sortdesc9" onclick="clickSortDESC(9)" class="icon-sort-table"><i class="fa fa-sort-desc"></i></a>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td></td>
                                    <td>
                                        <input type="text" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" />
                                    </td>
                                    <td>
                                        <input type="text" class="form-control" />
                                    </td>
                                </tr>
                                @for (int i = 0; i < 5; i++)
                                {
                                    <tr>
                                        <td>
                                            <input type="checkbox" id="cb@(i)" name="cb@(i)" />
                                        </td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                        <td></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row paddingtop10">
                        <div class="col-md-6 col-sm-6">
                            <div>
                                <label>
                                    Hiển thị
                                    <select class="form-control input-sm input-xsmall input-inline" id="sort-data">
                                        <option value="10">10</option>
                                        <option value="30">30</option>
                                        <option value="50">50</option>
                                    </select>
                                    trong 21230 kết quả
                                </label>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6">
                            <div class="dataTables_paginate paging_bootstrap_full_number pull-right">
                                <ul class="pagination" style="visibility: visible;">
                                    <li class="prev" id="btnFirstPrev"><a title="First"><i class="fa fa-angle-double-left"></i></a></li>
                                    <li class="prev" id="btnPrev"><a title="Prev"><i class="fa fa-angle-left"></i></a></li>
                                    <li class="active" id="page1"><a onclick="clickpageData(1)">1</a></li>
                                    <li id="page2"><a onclick="clickpageData(2)">2</a></li>
                                    <li id="page3"><a onclick="clickpageData(3)">3</a></li>
                                    <li id="page4"><a onclick="clickpageData(4)">4</a></li>
                                    <li id="page5"><a onclick="clickpageData(5)">5</a></li>
                                    <li class="next" id="btnNext"><a title="Next"><i class="fa fa-angle-right"></i></a></li>
                                    <li class="next" id="btnLastNext"><a title="Last"><i class="fa fa-angle-double-right"></i></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="tabbable-custom ">
                        <ul class="nav nav-tabs ">
                            <li class="active">
                                <a href="#tab1" data-toggle="tab">Chi tiết phản hồi</a>
                            </li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">
                                phản hồi khách hàng
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- END PAGE BASE CONTENT -->
</div>

@Html.Partial("_Partial_InsertReview")
@Html.Partial("_Partial_EditReview")

