@using CRM.Core
@using TOURDEMO.Utilities
@model tbl_MailConfig

<div class="modal fade " id="modal-edit-mailconfig" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Cập nhật mail</h4>
            </div>
            @using (Html.BeginForm("Update", "MailConfig"))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Email </label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tên hiển thị </label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Mật khẩu </label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Máy chủ </label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextBoxFor(model => model.Server, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Gửi tối đa/ngày</label>
                                    <div class="col-lg-3 col-md-3">
                                        @Html.TextBoxFor(model => model.SendMax, new { @class = "form-control", type = "number" })
                                    </div>
                                    <label class="control-label col-lg-3 col-md-3">Tùy chọn</label>
                                    <div class="col-lg-3 col-md-3">
                                        @Html.CheckBoxFor(model => model.EnableSsl) Enable SSL
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Port </label>
                                    <div class="col-lg-3 col-md-3">
                                        @Html.TextBoxFor(model => model.Port, new { @class = "form-control", type = "number" })
                                    </div>
                                    <label class="control-label col-lg-3 col-md-3"></label>
                                    <div class="col-lg-3 col-md-3">
                                        @Html.CheckBoxFor(model => model.IsForgotPassword) Mặc định
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
