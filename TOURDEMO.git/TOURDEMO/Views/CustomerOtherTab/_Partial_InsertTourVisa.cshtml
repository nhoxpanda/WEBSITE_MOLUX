@using CRM.Core
@using TOURDEMO.Utilities
@model tbl_TourCustomerVisa

<div class="modal fade " id="modal-insert-tour-visa" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Chọn tour visa</h4>
            </div>
            @using (Ajax.BeginForm("InsertTourVisa", "CustomerOtherTab", null, new AjaxOptions { OnFailure = "OnFailureVisa", OnSuccess = "OnSuccessVisa", UpdateTargetId = "visa" }))
            {
                @Html.TextBoxFor(model => model.CustomerId, new { @class = "form-control", @type = "hidden" })
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tour </label>
                                    <div class="col-lg-9 col-md-9">
                                        <select id="insert-tour-visa"  name="TourId" class="form-control" style="width: 100%">
                                            <option>-- Chọn tour --</option>
                                            @foreach (var item in LoadData.TourList())
                                            {
                                                <option value="@item.Id">[@item.Code] @item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue" id="btnInsertTourVisa">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
