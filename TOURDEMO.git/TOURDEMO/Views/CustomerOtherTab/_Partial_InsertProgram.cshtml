@using CRM.Core
@using TOURDEMO.Utilities
@model tbl_DocumentFile

<div class="modal fade " id="modal-insert-program" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Thêm mới chương trình</h4>
            </div>
            @using (Ajax.BeginForm("CreateProgram", "CustomerOtherTab", null, new AjaxOptions { OnFailure = "OnFailureCustomer", OnSuccess = "OnSuccessCustomer", UpdateTargetId = "chuongtrinh" }, new { id = "frmInsertProgram", enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tour</label>
                                    <div class="col-lg-9 col-md-9">
                                        <select id="insert-tour-program" name="TourId" class="form-control" style="width: 100%">
                                            <option>-- Chọn tour --</option>
                                            @foreach (var item in LoadData.TourList())
                                            {
                                                <option value="@item.Id">[@item.Code] @item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Code</label>
                                    <div class="col-lg-9 col-md-9">
                                        <input type="text" name="Code" id="insert-code-program" value="@GenerateCode.ProgramCode()" class="form-control" readonly="readonly" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tên chương trình</label>
                                    <div class="col-lg-9 col-md-9">
                                        <select id="insert-name-program" name="Name" class="form-control" style="width: 100%">
                                            <option value="0">-- Chọn chương trình --</option>
                                            @foreach (var item in LoadData.ProgramList())
                                            {
                                                <option value="@item.Id">[@item.Code] @item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Trạng thái</label>
                                    <div class="col-lg-9 col-md-9">
                                        <select id="insert-tour-status" name="StatusId" class="form-control" style="width: 100%">
                                            @foreach (var item in LoadData.StatusProcessList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">File</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextBoxFor(model => model.FileName, new { id = "insert-file-program", type = "file", @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tags</label>
                                    <div class="col-lg-9 col-md-9">
                                        <select id="insert-tag-program" name="TagsId" class="form-control" multiple="multiple" style="width: 100%">
                                            @foreach (var item in LoadData.DropdownlistLocation())
                                            {
                                                <option value="@item.Id">@item.Tags</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Diễn giải</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", id = "insert-program-note" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
