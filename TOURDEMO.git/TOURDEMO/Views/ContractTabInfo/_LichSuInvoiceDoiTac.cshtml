@using CRM.Core
@using TOURDEMO.Models
@using TOURDEMO.Utilities
@model IEnumerable<tbl_AppointmentHistory>
@{
    int i = 1;
}
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>STT</th>
                <th>Đối tác</th>
                <th>Ngày</th>
                <th>Yêu cầu xử lý</th>
                <th>Trạng thái xử lý</th>
                <th>Tên tour</th>
                <th>Nhân viên xử lý</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td  style="text-align: center">@i</td>
                        <td>@item.tbl_Partner.Name</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.Time)</td>
                        <td>@item.Title</td>
                        <td>@item.tbl_DictionaryStatus.Name</td>
                        <td>@item.tbl_Tour.Name</td>
                        <td>@item.tbl_Staff.FullName</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>
