@using CRM.Core
@using TOURDEMO.Models
@using TOURDEMO.Utilities
@model IEnumerable<tbl_TourSchedule>
    @{
        int i = 1;
    }

    <div class="table-scrollable table-custom-format">
        <table class="table table-striped table-bordered table-hover" id="table-booking">
            <thead>
                <tr>
                    <th>#</th>
                    <th>STT</th>
                    <th>Tour</th>
                    <th>Ngày đi</th>
                    <th>Ngày về</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td>
                                @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                                { <a style="cursor: pointer" onclick="deleteTourSchedule(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a> }
                            </td>
                            <td  style="text-align: center">@i</td>
                            <td>@(item.TourId != null ? item.tbl_Tour.Name : "")</td>
                            <td>@string.Format("{0:dd-MM-yyyy}", item.StartDate)</td>
                            <td>@string.Format("{0:dd-MM-yyyy}", item.EndDate)</td>
                            
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
