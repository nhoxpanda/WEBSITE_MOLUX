@using CRM.Core
@using CRM.Enum
@using TOURDEMO.Models
@using TOURDEMO.Utilities
@model IEnumerable<CustomerListViewModel>
    @{ int i = 1;}
    <div class="table-scrollable table-custom-format">
        <table class="table table-striped table-bordered table-hover" id="table-staff">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Mã DN-KH</th>
                    <th>Tên DN-KH</th>
                    <th>Địa chỉ</th>
                    <th>Điện thoại</th>
                    <th>CMND-Mã số thuế</th>
                    <th>Passport</th>
                    <th>Ngày hiệu lực</th>
                    <th>Ngày hết hạn</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td  style="text-align: center">@i</td>
                            <td>@item.Code</td>
                            @if (item.CustomerType == CustomerType.Personal)
                            {
                                <td>@item.Fullname</td>
                            }
                            else
                            {
                                <td>@item.Company</td>
                            }
                            <td>@item.Address</td>
                            <td>@(item.Phone ?? item.OtherPhone)</td>
                            @if (item.CustomerType == CustomerType.Personal)
                            {
                                <td>@item.IdentityCard</td>
                            }
                            else
                            {
                                <td>@item.TaxCode</td>
                            }
                            <td>@item.Passport</td>
                            <td>@string.Format("{0:dd-MM-yyyy}", item.StartDate)</td>
                            <td>@string.Format("{0:dd-MM-yyyy}", item.EndDate)</td>
                        </tr>
                            i++;
                    }
                }
            </tbody>
        </table>
    </div>
