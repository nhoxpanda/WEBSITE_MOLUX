@using CRM.Core
@using TOURDEMO.Models
@using TOURDEMO.Utilities
@model IEnumerable<TourListViewModel>
    @{ int i = 1;}
    <div class="table-scrollable table-custom-format">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Code tour</th>
                    <th>Tour</th>
                    <th>Ngày bắt đầu</th>
                    <th>Ngày kết thúc</th>
                    <th>Loại tour</th>
                    <th>Trạng thái</th>
                    <th>Thời hạn (số ngày)</th>
                    <th>Số lượng khách</th>
                    <th>Chi phí dự kiến</th>
                    <th>Chi phí thực tế</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td  style="text-align: center">@i</td>
                            <td>@item.Code</td>
                            <td>@item.Name</td>
                            <td>@string.Format("{0:dd-MM-yyyy}", @item.StartDate)</td>
                            <td>@string.Format("{0:dd-MM-yyyy}", @item.EndDate)</td>
                            <td>@item.TourType</td>
                            <td>@item.Status</td>
                            <td>@item.NumberDay</td>
                            <td>@item.NumberCustomer</td>
                            <td>@string.Format("{0:0,0}", item.CongNoDoiTac).Replace(",", ".")</td>
                            <td>@string.Format("{0:0,0}", item.CongNoKhachHang).Replace(",", ".")</td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
