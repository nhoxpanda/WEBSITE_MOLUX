@using TOURDEMO.Utilities
@using CRM.Core
@model tbl_Contract

<div class="modal fade  bs-modal-lg" id="modal-insert-contract" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Hợp đồng</h4>
            </div>
            @using (Html.BeginForm("Create", "ContractsManage", FormMethod.Post, new { enctype = "multipart/form-data"}))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Code</label>
                                    <div class="col-lg-4 col-md-4">
                                        <input type="text" name="Code" id="CodeContract" class="form-control" required onchange="checkCodeContract()" />
                                    </div>
                                    <label class="control-label col-lg-2 col-md-2">Tour</label>
                                    <div class="col-lg-4 col-md-4">
                                        <select class="form-control" id="insert-tour" name="TourId" style="width: 100%" >
                                            <option>-- Chọn tour --</option>
                                            @foreach (var item in LoadData.TourList())
                                            {
                                                <option value="@item.Id">[@item.Code] @item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Khách hàng</label>
                                    <div class="col-lg-4 col-md-4">
                                        <select class="form-control" id="insert-customer" name="CustomerId" style="width: 100%" >
                                            @foreach (var item in LoadData.CustomerList())
                                            {
                                                <option value="@item.Id">@item.FullName</option>
                                            }
                                        </select>
                                    </div>
                                    <label class="control-label col-lg-2 col-md-2">Ngày ký hợp đồng</label>
                                    <div class="col-lg-4 col-md-4">
                                        <input type="date" class="form-control" id="insert-contractdate" name="ContractDate" style="width: 100%"  />
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Đối tác</label>
                                    <div class="col-lg-4 col-md-4">
                                        <select class="form-control" id="insert-partner" name="PartnerId" style="width: 100%">
                                            @foreach (var item in LoadData.PartnerList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <label class="control-label col-lg-2 col-md-2">Ngày bắt đầu</label>
                                    <div class="col-lg-4 col-md-4">
                                        <input type="date" class="form-control" id="insert-startdate" name="StartDate" style="width: 100%" />
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Số ngày</label>
                                    <div class="col-lg-4 col-md-4">
                                        @Html.TextBoxFor(model => model.NumberDay, new { @class = "form-control", type = "number", min = "0" })
                                    </div>
                                    <label class="control-label col-lg-2 col-md-2">Ngày kết thúc</label>
                                    <div class="col-lg-4 col-md-4">
                                        <input type="date" class="form-control" id="insert-enddate" name="EndDate" style="width: 100%"  />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Tình trạng</label>
                                    <div class="col-lg-4 col-md-4">
                                        <select class="form-control" id="insert-status" name="StatusContractId" style="width: 100%">
                                            @foreach (var item in LoadData.StatusContractList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <label class="control-label col-lg-2 col-md-2">Tổng giá trị</label>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.TotalPrice, new { @class = "form-control" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        <select id="insert-currency" name="CurrencyId" style="width: 100%" class="form-control">
                                            @foreach (var item in LoadData.CurrencyList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Upload file</label>
                                    <div class="col-lg-4 col-md-4">
                                        <input type="file" class="form-control" name="fileUpload" id="insert-contract-partner" />
                                    </div>

                                    <label class="control-label col-lg-2 col-md-2">Tổng chi phí (dự kiến)</label>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.TongDuKien, new { @class = "form-control" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        <select id="insert-currency-dukien" name="CurrencyTDK" style="width: 100%" class="form-control">
                                            @foreach (var item in LoadData.CurrencyList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                    <div class="col-lg-10 col-md-10">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control", id = "insert-note" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
