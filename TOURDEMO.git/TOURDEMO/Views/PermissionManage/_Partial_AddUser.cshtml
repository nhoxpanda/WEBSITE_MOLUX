@using CRM.Core
@using TOURDEMO.Models
@using TOURDEMO.Utilities
@model IEnumerable<StaffListViewModel>
    <div class="modal fade  bs-modal-lg" id="modal-add-user" role="document" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Chọn người dùng</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="table-scrollable table-custom-format">
                            <table class="table table-striped table-bordered table-hover dataTable2" id="tableStaff">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    <tr>
                                        <th></th>
                                        <th>Mã số</th>
                                        <th>Họ tên</th>
                                        <th>Ngày sinh</th>
                                        <th>Địa chỉ</th>
                                        <th>Phòng ban</th>
                                        <th>Chức vụ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        foreach (var item in Model)
                                        {
                                            <tr class="odd gradeX">
                                                <td>
                                                    <input type="checkbox" value="@item.Id" class="checkAddUser" name="checkAddUser" />
                                                </td>
                                                <td>@item.Code</td>
                                                <td>@item.Fullname</td>
                                                <td>@item.Birthday</td>
                                                <td>@item.Address</td>
                                                <td>@item.Department</td>
                                                <td>@item.Position</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <form action="@Url.Action("InsertUser", "PermissionManage")" method="post" id="formAddUser" style="position:absolute">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="listItemIdAdd" name="listItemIdAdd" value="" />
                    </form>
                        <button type="submit" class="btn blue" id="btnLuuAddUser">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>

    <script>

    </script>
