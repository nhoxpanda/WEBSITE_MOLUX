@using CRM.Core
@using TOURDEMO.Models
@using TOURDEMO.Utilities
@model IEnumerable<StaffListViewModel>

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="dataTable3">
        <thead>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Mã số</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Địa chỉ</th>
                <th>Phòng ban</th>
                <th>Chức vụ</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                int i = 1;
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td><a onclick="deleteUser(@item.Id)">Xóa người dùng</a></td>
                        <td  style="text-align: center">@i</td>
                        <td>@item.Code</td>
                        <td>@item.Fullname</td>
                        <td>@item.Birthday</td>
                        <td>@item.Address</td>
                        <td>@item.Department</td>
                        <td>@item.Position</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>