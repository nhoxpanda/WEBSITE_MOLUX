@using TOURDEMO.Utilities
@using TOURDEMO.Models
@using CRM.Core
@model tbl_Customer

<div class="modal fade" id="modal-change-manager" role="document" aria-hidden="true">
    <div class="modal-dialog">
        @using (Ajax.BeginForm("ChangeManager", "CustomersManage", null, new AjaxOptions { OnFailure = "OnFailureCustomer", OnSuccess = "OnSuccessCustomer", UpdateTargetId = "" }, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.Id)
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Chuyển quyền quản lý</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-4 col-md-4">Nhân viên quản lý</label>
                                    <div class="col-lg-8 col-md-8">
                                        <select class="form-control" style="width: 100%" name="StaffManager" id="customer-change-manager">
                                            @foreach (var item in LoadData.StaffList())
                                            {
                                                <option value="@item.Id" @(Model.StaffManager != null  && Model.StaffManager == item.Id ? "selected" : "")>[@item.Code] @item.FullName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue" id="btnLuuThem">Thực hiện</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        <!-- /.modal-content -->
        }
    </div>
    <!-- /.modal-dialog -->
</div>


