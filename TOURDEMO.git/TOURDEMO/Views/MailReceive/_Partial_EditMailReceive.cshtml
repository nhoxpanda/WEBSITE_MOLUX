@using CRM.Core
@using TOURDEMO.Utilities
@model tbl_MailReceives

<div class="modal fade " id="modal-edit-mailreceive" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Cập nhật danh sách nhận mail</h4>
            </div>
            @using (Html.BeginForm("Update", "MailReceive"))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Tên danh sách </label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.CreateDate)
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">Diễn giải </label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", id = "edit-noidung" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
