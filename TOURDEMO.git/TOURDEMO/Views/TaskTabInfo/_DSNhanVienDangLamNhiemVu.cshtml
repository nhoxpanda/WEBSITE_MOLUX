@using CRM.Core
@using TOURDEMO.Models
@using TOURDEMO.Utilities
@model IEnumerable<tbl_TaskStaff>
    @{
        int i = 1;
    }
    <div class="table-scrollable table-custom-format">
        <table class="table table-striped table-bordered table-hover" id="">
            <thead>
                <tr>
                    <th>#</th>
                    <th>STT</th>
                    <th>Mã số</th>
                    <th>Họ tên</th>
                    <th>Vai trò</th>
                    <th>Vai trò chính</th>
                    <th>Diễn giải</th>
                    <th>Ngày giao</th>
                    <th>Người giao việc</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <tr class="odd gradeX">
                            <td><a style="cursor: pointer" onclick="deleteNVWork(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a></td>
                            <td  style="text-align: center">@i</td>
                            <td>@item.tbl_Staff.Code</td>
                            <td>@item.tbl_Staff.FullName</td>
                            <td>@item.Role</td>
                            @if (item.IsMain)
                            {
                                <td>Vai trò chính</td>
                            }
                            else
                            {
                                <td></td>
                            }
                            <td>@Html.Raw(item.Note)</td>
                            <td>@item.CreateDate.ToString("dd-MM-yyyy")</td>
                            <td>@item.tbl_StaffCreate.FullName</td>
                        </tr>
                        i++;
                    }
                }
            </tbody>
        </table>
    </div>
