@using CRM.Core
@model IEnumerable<TOURDEMO.Models.HistoryLogViewModel>

<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="">
        <thead>
            <tr>
                <th>Ngày xử lý</th>
                <th>Diễn giải</th>
                <th>Nhân viên quản lý</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>@item.Date</td>
                        <td>@Html.Raw(item.Note)</td>
                        <td>@item.Staff</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
        </tbody>
    </table>
</div>
