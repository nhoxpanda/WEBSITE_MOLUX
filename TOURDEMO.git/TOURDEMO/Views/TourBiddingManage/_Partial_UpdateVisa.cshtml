@using TRAVELPLUS.Utilities
@using CRM.Core
@model tbl_CustomerVisa

<div class="modal fade bs-modal-lg" id="modal-update-visa" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        @using (Ajax.BeginForm("UpdateVisa", "TourOtherTab", null, new AjaxOptions { OnFailure = "OnFailure", OnSuccess = "OnSuccess", UpdateTargetId = "visa" }))
        {
            <input type="hidden" id="listVisaId" name="listVisaId" />
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                    <h4 class="modal-title">Cập nhật visa</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Trạng thái visa</label>
                                    <div class="col-lg-10 col-md-10">
                                        <select class="form-control" id="update-status-visa" style="width: 100%" name="DictionaryId">
                                            @foreach (var item in LoadData.VisaStatusList())
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                    <div class="col-lg-10 col-md-10">
                                        <textarea name="NoteVisa" class="form-control" id="edit-note-visa"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="submit" class="btn blue" id="btnLuuThem">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        }
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
