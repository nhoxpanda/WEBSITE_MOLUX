@using TRAVELPLUS.Utilities

<div class="modal fade  bs-modal-lg" id="modal-update-tourtype" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Chuyển đổi loại tour</h4>
            </div>
            @using (Html.BeginForm("UpdateTypeTour", "TourBiddingManage"))
            { 
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Loại tour</label>
                                <div class="col-lg-6 col-md-6">
                                    <select class="form-control" name="TourTypeId" id="update-type-tour" style="width: 100%">
                                        @foreach (var item in LoadData.TourTypeList())
                                        {
                                            <option value="@item.Id">@item.Name</option>
                                        }
                                        <option value="99999">Thầu</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div align="center" style="margin-bottom: 20px">
                <button type="submit" class="btn blue">Lưu</button>
                <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
            </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

