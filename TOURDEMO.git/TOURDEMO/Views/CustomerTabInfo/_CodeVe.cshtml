@model IEnumerable<CRM.Core.tbl_Ticket>
@{
    int i = 1;
}

@if (ViewBag.IsAdd != null && ViewBag.IsAdd)
{
    <a class="btn btn-primary" onclick="btnCreateTicket()" id="btnCreateTicket"><i class=" fa fa-plus"></i>&nbsp;Thêm</a>
}
<br />
<br />
<div class="table-scrollable table-custom-format">
    <table class="table table-striped table-bordered table-hover" id="table-ticket">
        <thead>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Vé máy bay</th>
                <th>Loại vé</th>
                <th>Tình trạng</th>
                <th>Điểm đi</th>
                <th>Điểm đến</th>
                <th>Ngày đi</th>
                <th>Ngày về</th>
                <th>Chi phí</th>
                <th>Nhân viên nhập</th>
                <th>Ngày nhập</th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                            {<a style="cursor: pointer" onclick="updateTicket(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />}
                            @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                            {   <a style="cursor: pointer" onclick="deleteTicket(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a>}
                        </td>
                        <td  style="text-align: center">@i</td>
                        <td>@item.Code</td>
                        <td>@item.tbl_DictionaryType.Name</td>
                        <td>@item.tbl_DictionaryStatus.Name</td>
                        <td>@item.tbl_TagsStart.Tag</td>
                        <td>@item.tbl_TagsEnd.Tag</td>
                        <td>@(item.StartDate != null ? string.Format("{0:dd-MM-yyyy}", item.StartDate) : "")</td>
                        <td>@(item.EndDate != null ? string.Format("{0:dd-MM-yyyy}", item.EndDate) : "")</td>
                        <td>@(item.Price != null ? string.Format("{0:0,0}", item.Price) : "0") @item.tbl_DictionaryCurrency.Name</td>
                        <td>@item.tbl_Staff.FullName</td>
                        <td>@string.Format("{0:dd-MM-yyyy}", item.CreateDate)</td>
                    </tr>
                            i++;
                }
            }
        </tbody>
    </table>
</div>
