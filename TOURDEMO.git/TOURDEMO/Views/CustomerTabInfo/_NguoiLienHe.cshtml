@using CRM.Core
@using TOURDEMO.Utilities
@model IEnumerable<tbl_CustomerContact>
@{
    int i = 1;
}

<div class="table-scrollable table-custom-format">
    @if (ViewBag.IsAdd != null && ViewBag.IsAdd)
    {
        <button class="btn btn-primary" onclick="btnCreateContact()" id="btnCreateContact"><i class="fa fa-plus"></i>&nbsp;Thêm</button>
    }
    <br />
    <br />
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>Họ tên</th>
                <th>Ngày sinh</th>
                <th>Địa chỉ</th>
                <th>Email</th>
                <th>Chức vụ</th>
                <th>Điện thoại</th>
                <th>Điện thoại CQ</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr class="odd gradeX">
                        <td>
                            @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                            {<a style="cursor: pointer" onclick="updateContact(@item.Id)"><i class="fa fa-pencil"></i>&nbsp;Sửa</a><br />}
                            @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                            { <a style="cursor: pointer" onclick="deleteContact(@item.Id)"><i class="fa fa-trash"></i>&nbsp;Xóa</a><br />}
                        </td>
                        <td  style="text-align: center">@i</td>
                        <td>@item.FullName</td>
                        <td>@(item.Birthday != null ? string.Format("{0:dd-MM-yyyy}", item.Birthday) : "")</td>
                        <td>@item.Address, @(item.TagsId != null ? LoadData.LocationTags(item.TagsId) : "")</td>
                        <td>@item.Email</td>
                        <td>@item.Position</td>
                        <td>@item.Mobile</td>
                        <td>@item.CompanyPhone</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>


