@using CRM.Core
@using TOURDEMO.Utilities
@model tbl_AppointmentHistory

<div class="modal fade " id="modal-detail-appoinment" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Lịch hẹn: @Model.Title</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Thời gian:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@string.Format("{0:dd/MM/yyyy hh:mm tt}", Model.Time)</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Khách hàng:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@(Model.CustomerId != null ? Model.tbl_Customer.FullName : "")</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Tour:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@(Model.TourId != null ? Model.tbl_Tour.Name : "")</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Đối tác:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@(Model.PartnerId != null ? Model.tbl_Partner.Name : "")</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Chương trình:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@(Model.ProgramId != null ? Model.tbl_Program.Name : "")</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Hợp đồng:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@(Model.ContractId != null ? Model.tbl_Contract.Name : "")</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Nhiệm vụ:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@(Model.TaskId != null ? Model.tbl_Task.Name : "")</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Nhân viên:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@Model.tbl_Staff.FullName@(Model.OtherStaff != null ? ", " + LoadData.LoadStaff(Model.OtherStaff) : "")</label>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-lg-4 col-md-4">Ghi chú:</label>
                                <label class="control-label col-lg-8 col-md-8" style="text-align: left">@Html.Raw(Model.Note)</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div align="center" style="margin-bottom: 20px">
                <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



