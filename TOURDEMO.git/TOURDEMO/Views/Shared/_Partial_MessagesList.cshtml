@using TOURDEMO.Utilities
@model IEnumerable<CRM.Core.tbl_AppointmentHistory>

@if (Model.Count() > 0)
{
    foreach (var item in Model)
    {
        <div id="messagesTable" class="jquery-notific8-container top right" style="z-index: 11500;">
            <div class="jquery-notific8-notification tangerine" id="jquery-notific8-notification-14" style="display: block;">
                <div class="jquery-notific8-heading">
                    <p><strong>Lịch hẹn khách hàng!</strong></p>
                </div>
                <div class="jquery-notific8-close"><span>X</span></div>
                <div class="jquery-notific8-message">
                    <p>@item.Title</p>
                    <p>Khách hàng: @(item.CustomerId != null ? item.tbl_Customer.FullName : "")</p>
                    <p>Đối tác: @(item.PartnerId != null ? item.tbl_Partner.Name : "")</p>
                    <p>Tour: @(item.TourId != null ? item.tbl_Tour.Name : "")</p>
                    <p>Nhân viên: @item.tbl_Staff.FullName @(item.OtherStaff != null ? "," + LoadData.LoadStaff(item.OtherStaff) : "")</p>
                    <p>@string.Format("{0:dd-MM-yyyy hh:mm:ss}", item.Time)</p>
                </div>
            </div>
        </div>
    }
}