@using TOURDEMO.Utilities
@model CRM.Core.tbl_Partner

<div class="modal fade bs-modal-lg" id="modal-edit-landtour" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Sự kiện</h4>
            </div>
            @using (Ajax.BeginForm("UpdateLandtour", "TourService", null, new AjaxOptions { OnFailure = "OnFailureTourService", OnSuccess = "OnSuccessTourService", UpdateTargetId = "dichvu" }, new { enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row OptionLandtour" id="OptionLandtour1">
                            <div class="col-md-12">
                                <div class="portlet light bordered">
                                    <div class="portlet-title">
                                        <div class="caption">
                                            <a data-toggle="collapse" data-target="#demo-landtour1" style="cursor: pointer" class="btn btn-default OptionLandtourA"><i class="fa fa-minus"></i></a>
                                            <span class="caption-subject bold uppercase font-purple landtourTitle">OPTION 1</span>
                                        </div>
                                        <div class="actions actionsOptionLandtour">
                                            <button type="button" style="cursor: pointer" class="btn btn-danger btnRemoveOptionLandtour" disabled="disabled" onclick="removeOptionLandtour()"><i class="fa fa-times"></i></button>
                                        </div>
                                    </div>
                                    <div class="portlet-body OptionLandtourBody collapse in" id="demo-landtour1">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Đối tác</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <select class="form-control insert-company-landtour" name="insert-company-landtour1" id="insert-company-landtour1" style="width: 100%">
                                                            <option>-- Chọn đối tác sự kiện --</option>
                                                            @foreach (var item in LoadData.LandtourList())
                                                            {
                                                                <option value="@item.Id">@item.Name</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">File</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input type="file" class="form-control insert-file-landtour" name="FileNameLandtour" id="insert-file-landtour1" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Code</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input type="text" name="insert-code-landtour1" class="form-control insert-code-landtour" id="insert-code-landtour1" readonly="readonly" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Tổng giá trị</label>
                                                    <div class="col-lg-5 col-md-5">
                                                        <input type="number" min="0" class="form-control insert-price-landtour" id="insert-price-landtour1" name="insert-price-landtour1" />
                                                    </div>
                                                    <div class="col-lg-3 col-md-3">
                                                        <select class="form-control insert-currency-landtour" style="width: 100%" id="insert-currency-landtour1" name="insert-currency-landtour1">
                                                            @foreach (var item in LoadData.CurrencyList())
                                                            {
                                                                <option value="@item.Id">@item.Name</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-lg-2 col-md-2">Người liên hệ</label>
                                                    <div class="col-lg-4 col-md-4">
                                                        <input type="text" class="form-control insert-contact-landtour" id="insert-contact-landtour1" name="insert-contact-landtour1" />
                                                    </div>
                                                    <label class="control-label col-lg-2 col-md-2">Điện thoại</label>
                                                    <div class="col-lg-4 col-md-4">
                                                        <input type="text" class="form-control insert-phone-landtour" name="insert-phone-landtour1" id="insert-phone-landtour1" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                                    <div class="col-lg-10 col-md-10">
                                                        <textarea class="form-control insert-note-landtour" name="insert-note-landtour1" id="insert-note-landtour1"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="portlet light bordered DeadlineLandtour" id="DeadlineLandtour11">
                                                    <div class="portlet-title">
                                                        <div class="caption">
                                                            <a data-toggle="collapse" data-target="#deadline-landtour11" style="cursor: pointer" class="btn btn-default deadline-landtour-a"><i class="fa fa-minus"></i></a>
                                                            <span class="caption-subject bold uppercase font-purple DeadlineLandtourTitle">Deadline 1</span>
                                                        </div>
                                                        <div class="actions">
                                                            <button type="button" class="btn btn-default btnNewDealineLandtour" onclick="addNewDeadlineLandtour(1)"> <i class="fa fa-plus"></i></button>
                                                            <button type="button" style="cursor: pointer" class="btn btn-danger btnRemoveDealineLandtour" disabled="disabled" onclick="removeDeadlineLandtour(1, 1)"><i class="fa fa-times"></i></button>
                                                        </div>
                                                    </div>
                                                    <div class="portlet-body deadline-landtour-body collapse in" id="deadline-landtour11">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label class="control-label col-lg-2 col-md-2">Tên</label>
                                                                    <div class="col-lg-4 col-md-4">
                                                                        <input name="deadline-name-landtour11" id="deadline-name-landtour11" type="text" class="form-control deadline-name-landtour" />
                                                                    </div>
                                                                    <label class="control-label col-lg-2 col-md-2">Deposit</label>
                                                                    <div class="col-lg-2 col-md-2">
                                                                        <input name="deadline-total-landtour11" id="deadline-total-landtour11" type="number" min="0" class="form-control deadline-total-landtour" />
                                                                    </div>
                                                                    <div class="col-lg-2 col-md-2">
                                                                        <select id="deadline-currency-landtour11" name="deadline-currency-landtour11" style="width: 100%" class="form-control deadline-currency-landtour">
                                                                            @foreach (var item in LoadData.CurrencyList())
                                                                            {
                                                                                <option value="@item.Id">@item.Name</option>
                                                                            }
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label class="control-label col-lg-2 col-md-2">Thời gian</label>
                                                                    <div class="col-lg-4 col-md-4">
                                                                        <input type="date" class="form-control deadline-thoigian-landtour" name="deadline-thoigian-landtour11" id="deadline-thoigian-landtour11" />
                                                                    </div>
                                                                    <label class="control-label col-lg-2 col-md-2">Tình trạng</label>
                                                                    <div class="col-lg-4 col-md-4">
                                                                        <select class="form-control deadline-status-landtour" id="deadline-status-landtour11" style="width:100%;" name="deadline-status-landtour11">
                                                                            @foreach (var item in LoadData.StatusProcessList())
                                                                            {
                                                                                <option value="@item.Id">@item.Name</option>
                                                                            }
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                                                    <div class="col-lg-10 col-md-10">
                                                                        <textarea class="form-control deadline-note-landtour" id="deadline-note-landtour11" name="deadline-note-landtour11"></textarea>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <input type="hidden" value="1" name="NumberDeadlineLandtour1" class="countDeadlineLandtour" id="countDeadlineLandtour1" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <input type="hidden" value="1" name="NumberOptionLandtour" id="countOptionLandtour" />
                    <button type="button" class="btn btn-success" onclick="addNewOptionLandtour()">Thêm option</button>
                    <button type="submit" class="btn blue">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
