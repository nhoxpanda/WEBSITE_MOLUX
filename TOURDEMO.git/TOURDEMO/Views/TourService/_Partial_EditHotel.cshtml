@using TOURDEMO.Utilities

<div class="modal fade bs-modal-lg" id="modal-edit-hotel" role="document" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Khách sạn</h4>
            </div>
            @using (Ajax.BeginForm("UpdateHotel", "TourService", null, new AjaxOptions { OnFailure = "OnFailureTourService", OnSuccess = "OnSuccessTourService", UpdateTargetId = "dichvu" }))
            {
                <div class="modal-body OptionHotel" id="OptionHotel1">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="portlet light bordered">
                                    <div class="portlet-title">
                                        <div class="caption captionOption">
                                            <a data-toggle="collapse" data-target="#hotel1" style="cursor: pointer" class="btn btn-default OptionHotelA"><i class="fa fa-minus"></i></a>
                                            <span class="caption-subject bold uppercase font-purple OptionTitle">OPTION 1</span>
                                        </div>
                                        <div class="actions actionsOption">
                                            <button style="cursor: pointer" type="button" class="btn btn-danger btnRemoveOption" disabled="disabled" onclick="removeOptionHotel()"><i class="fa fa-times"></i></button>
                                        </div>
                                    </div>
                                    <div class="portlet-body OptionHotelBody collapse in" id="hotel1">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Khách sạn</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <select class="form-control hotel-tour" style="width: 100%" id="hotel-tour1" name="hotel-tour1">
                                                            <option>-- Chọn khách sạn --</option>
                                                            @foreach (var item in LoadData.HotelList())
                                                            {
                                                                <option value="@item.Id">@item.Name</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Tiêu chuẩn</label>
                                                    <div class="col-lg-3 col-md-3">
                                                        <select class="form-control star-hotel" id="star-hotel1" style="width:100%" name="star-hotel1">
                                                            <option value="1">1</option>
                                                            <option value="2">2</option>
                                                            <option value="3">3</option>
                                                            <option value="4">4</option>
                                                            <option value="5">5</option>
                                                        </select>
                                                    </div>
                                                    <label class="control-label col-lg-5 col-md-5" style="text-align: left">sao</label>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Từ ngày</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input type="date" class="form-control tungay-hotel" id="tungay-hotel1" name="tungay-hotel1">
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Số lượng phòng</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input name="room-hotel1" id="room-hotel1" type="number" class="form-control room-hotel" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Người liên hệ</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input name="nguoi-lien-he-hotel1" id="nguoi-lien-he-hotel1" class="form-control nguoi-lien-he-hotel" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Code</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input name="code-hotel1" id="code-hotel1" readonly="readonly" type="text" class="form-control code-hotel" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Vị trí</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input name="position-hotel1" id="position-hotel1" type="text" class="form-control position-hotel" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Đêm</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input name="night-hotel1" id="night-hotel1" type="number" class="form-control night-hotel" />
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Giá/đơn vị:</label>
                                                    <div class="col-lg-5 col-md-5">
                                                        <input name="price-hotel1" id="price-hotel1" type="text" class="form-control price-hotel" />
                                                    </div>
                                                    <div class="col-lg-3 col-md-3">
                                                        <select class="form-control currency-hotel-tour" style="width: 100%" id="currency-hotel-tour1" name="currency-hotel-tour1">
                                                            @foreach (var item in LoadData.CurrencyList())
                                                            {
                                                                <option value="@item.Id">@item.Name</option>
                                                            }
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="form-group">
                                                    <label class="control-label col-lg-4 col-md-4">Số điện thoại</label>
                                                    <div class="col-lg-8 col-md-8">
                                                        <input name="phone-hotel1" id="phone-hotel1" type="text" class="form-control phone-hotel" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                                    <div class="col-lg-10 col-md-10">
                                                        <textarea name="note-hotel1" id="note-hotel1" class="form-control note-hotel"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="portlet light bordered DeadlineHotel" id="DeadlineHotel11">
                                                    <div class="portlet-title">
                                                        <div class="caption">
                                                            <a data-toggle="collapse" data-target="#deadline-hotel11" style="cursor: pointer" class="btn btn-default deadline-hotel-a"><i class="fa fa-minus"></i></a>
                                                            <span class="caption-subject bold uppercase font-purple DeadlineTitle">Deadline 1</span>
                                                        </div>
                                                        <div class="actions">
                                                            <button class="btn btn-default btnNewDealine" onclick="addNewDeadlineHotel(1)"> <i class="fa fa-plus"></i></button>
                                                            <button style="cursor: pointer" type="button" class="btn btn-danger btnRemoveDealine" disabled="disabled" onclick="removeDeadlineHotel(1,1)"><i class="fa fa-times"></i></button>
                                                        </div>
                                                    </div>
                                                    <div class="portlet-body deadline-hotel-body collapse in" id="deadline-hotel11">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label class="control-label col-lg-2 col-md-2">Tên</label>
                                                                    <div class="col-lg-4 col-md-4">
                                                                        <input name="deadline-name-hotel11" id="deadline-name-hotel11" type="text" class="form-control deadline-name-hotel" />
                                                                    </div>
                                                                    <label class="control-label col-lg-2 col-md-2">Deposit</label>
                                                                    <div class="col-lg-2 col-md-2">
                                                                        <input name="deadline-total-hotel11" id="deadline-total-hotel11" type="number" min="0" class="form-control deadline-total-hotel" />
                                                                    </div>
                                                                    <div class="col-lg-2 col-md-2">
                                                                        <select id="deadline-currency-hotel11" name="deadline-currency-hotel11" style="width: 100%" class="form-control deadline-currency-hotel">
                                                                            @foreach (var item in LoadData.CurrencyList())
                                                                            {
                                                                                <option value="@item.Id">@item.Name</option>
                                                                            }
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label class="control-label col-lg-2 col-md-2">Thời gian</label>
                                                                    <div class="col-lg-4 col-md-4">
                                                                        <input type="date" class="form-control deadline-thoigian-hotel" name="deadline-thoigian-hotel11" id="deadline-thoigian-hotel11" />
                                                                    </div>
                                                                    <label class="control-label col-lg-2 col-md-2">Tình trạng</label>
                                                                    <div class="col-lg-4 col-md-4">
                                                                        <select class="form-control deadline-status-hotel" id="deadline-status-hotel11" style="width:100%;" name="deadline-status-hotel11">
                                                                            @foreach (var item in LoadData.StatusProcessList())
                                                                            {
                                                                                <option value="@item.Id">@item.Name</option>
                                                                            }
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-md-12">
                                                                <div class="form-group">
                                                                    <label class="control-label col-lg-2 col-md-2">Ghi chú</label>
                                                                    <div class="col-lg-10 col-md-10">
                                                                        <textarea class="form-control deadline-note-hotel" id="deadline-note-hotel11" name="deadline-note-hotel11"></textarea>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <input type="hidden" value="1" name="NumberDeadlineHotel1" class="countDeadline" id="countDeadlineHotel1" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <input type="hidden" value="1" name="NumberOptionHotel" id="countOptionHotel" />
                    <button type="button" class="btn btn-success" onclick="addNewOptionHotel()">Thêm option</button>
                    <button type="submit" class="btn blue" id="btnLuuFunction">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
