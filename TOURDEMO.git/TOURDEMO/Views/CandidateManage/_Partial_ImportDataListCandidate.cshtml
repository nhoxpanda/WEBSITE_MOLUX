@using CRM.Core
@using TOURDEMO.Utilities
@model IEnumerable<tbl_Candidate>
@{
    int i = 0;
}
<div class="table-responsive table-custom-format">

    <script>
            $("#tbl-data-import").on("change", ".cbItem", function () {
                var ItemID = $(this).val();
                var currentlistItemID = $("#listItemIdI").val();
                var stringBranchID = "";
                if ($(this).prop('checked')) {
                    currentlistItemID += ItemID + ",";
                    $("#listItemIdI").val(currentlistItemID);
                } else {
                    $("#listItemIdI").val(currentlistItemID.replace(ItemID + ",", ""));
                }
            });
            function DeleteImport() {
                if ($("#listItemIdI").val() == "") {
                    alert("Vui lòng chọn mục cần xóa !");
                    return false;
                }
                var dataPost = { listItemId: $("#listItemIdI").val() };
                $.ajax({
                    type: "POST",
                    url: '/CandidateManage/DeleteImport',
                    data: JSON.stringify(dataPost),
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (data) {
                        $("#import-data-candidate").html(data);
                        $("#listItemIdI").val("");
                    }
                });
            }
            function SaveImport() {
                $.ajax({
                    type: "POST",
                    url: '/CandidateManage/SaveImport',
                    contentType: "application/json; charset=utf-8",
                    dataType: "html",
                    success: function (data) {
                        var obj = jQuery.parseJSON(data);
                        alert(obj.Message);
                        $("#modal-import-candidate").modal("hide");
                        if (obj.IsPartialView) {
                            $("#tableDictionary").replaceWith(obj.View);
                        }
                        else {
                            if (obj.RedirectTo != null && obj.RedirectTo != "") {
                                window.location.href = obj.RedirectTo;
                            }
                        }
                    }
                });
            }
    </script>
    <table class="table table-striped table-bordered table-hover" id="tbl-data-import">
        <thead>
            <tr>
                <th>#</th>
                <th>STT</th>
                <th>HỌ TÊN</th>
                <th>NGÀY SINH</th>
                <th>NGÀY ỨNG TUYỂN</th>
                <th>VỊ TRÍ ỨNG TUYỂN</th>
                <th>ĐỊA CHỈ</th>
                <th>ĐIỆN THOẠI</th>
                <th>EMAIL</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <input type="checkbox" value="@i" id="cb@i" class="cbItem" name="cb" onclick="CheckSelect()" />
                    </td>
                    <td>@(i + 1)</td>
                    <td>@item.FullName</td>
                    <td>@string.Format("{0:dd-MM-yyyy}", item.Birthday)</td>
                    <td>@string.Format("{0:dd-MM-yyyy}", item.ApplyDate)</td>
                    <td>@item.InformationTechnology</td>
                    <td>@item.Address</td>
                    <td>@item.Phone</td>
                    <td>@item.Email</td>
                </tr>
                i++;
            }
        </tbody>
    </table>
</div>
