@using TOURDEMO.Models
@model IEnumerable<EvaluationCriteriaViewModel>

@{
    ViewBag.Title = "Quản lý Đánh giá";
    int i = 1;
}

<div class="page-content">
    <!-- BEGIN PAGE HEAD-->
    <div class="page-head">
        <!-- BEGIN PAGE TITLE -->
        <div class="page-title">
            <h1>QUẢN LÝ ĐÁNH GIÁ</h1>
        </div>
        <!-- END PAGE TITLE -->
    </div>
    <!-- END PAGE HEAD-->
    <!-- BEGIN PAGE BASE CONTENT -->
    <div class="note note-info">
        <div class="row">
            <div class="col-md-12">
                <a class="btn btn-default" href="@Url.Action("Index", "EvaluationCriteria")"><i class="fa fa-refresh"></i>&nbsp;Nạp</a>
                @if (ViewBag.IsAdd != null && ViewBag.IsAdd)
                { <button class="btn btn-primary" onclick="addRow2Colum()" id="btnAdd"><i class="fa fa-plus"></i>&nbsp;Thêm</button>}
                @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                { <button class="btn btn-warning" onclick="updateRow2Colum()" id="btnEdit"><i class="fa fa-pencil"></i>&nbsp;Sửa</button>}

                @if (ViewBag.IsDelete != null && ViewBag.IsDelete)
                { <button class="btn btn-danger" id="btnRemove"><i class="fa fa-remove"></i>&nbsp;Xóa</button>
                    <form action="@Url.Action("Delete", "EvaluationCriteria")" method="post" style="position:absolute">
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="listItemId" name="listItemId" />
                    </form>
                }
                @if (ViewBag.IsEdit != null && ViewBag.IsEdit)
                { <button class="btn green" id="btnSave"><i class="fa fa-floppy-o"></i>&nbsp;Lưu</button>}
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="portlet light bordered">
                <div class="portlet-body">
                    <div class="table-responsive table-custom-format" id="tableDictionary-Wrapper">
                        <table class="table table-striped table-bordered table-hover table-addrow" id="tableDictionary">
                            <thead>
                                <tr>
                                    <th id="ID" hidden="hidden"></th>
                                    <th class="table-checkbox">
                                        <input type="checkbox" id="allcb" name="allcb" onclick="SelectAllCb()" />
                                    </th>
                                    <th>STT</th>
                                    <th>Tên đánh giá</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="width24">
                                            <input type="checkbox" value="@item.Id" class="cbItem" id="cb@(item.Id)" name="cb" onclick="CheckSelect()" />
                                        </td>
                                        <td style="text-align: center">@i</td>
                                        <td>@item.Name</td>
                                    </tr>
                                    i++;
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- END PAGE BASE CONTENT -->
</div>

@section scripts{
    <script src="~/Scripts/controller/evaluation.js"></script>
}
