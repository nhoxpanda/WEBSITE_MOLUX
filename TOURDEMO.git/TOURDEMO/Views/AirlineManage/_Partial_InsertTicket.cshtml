@using CRM.Core
@using TOURDEMO.Utilities
@model tbl_AirlineTicket

<div class="modal fade " id="modal-insert-ticket" role="document" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Thêm mới Airline Ticket</h4>
            </div>
            @using (Html.BeginForm("CreateAirlineTicket", "AirlineManage", FormMethod.Post, new { id = "frmInsertTicket", enctype = "multipart/form-data" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-lg-3 col-md-3">File</label>
                                    <div class="col-lg-9 col-md-9">
                                        <input type="file" id="file-insert-ticket" name="Image" class="form-control" />
                                    </div>
                                    
                                    
                                </div>
                                
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    
                                    <label class="control-label col-lg-3 col-md-3">Ghi chú</label>
                                    <div class="col-lg-9 col-md-9">
                                        @Html.TextAreaFor(model => model.Note, new { @class = "form-control" })
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
                <div align="center" style="margin-bottom: 20px">
                    <button type="button" class="btn blue" id="btnInsertTicket">Lưu</button>
                    <button type="button" class="btn default" data-dismiss="modal">Đóng</button>
                </div>
            }
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


