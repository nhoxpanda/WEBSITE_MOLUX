                            <p style="text-align:center"><strong>Quảng Ninh:&nbsp;</strong>@config.Address2 <a href="@config.GoogleMap2" title="@config.Address2" target="_blank" style="color: #e6c804 !important; display: inline">(Bản đồ)</a></p>
                            <p style="text-align:center"><strong>Điện thoại:&nbsp;</strong>@config.PhonePurchase - @config.CustomerService</p>
                            <p style="text-align:center"><strong>Email:&nbsp;</strong>@config.Email1</p>
