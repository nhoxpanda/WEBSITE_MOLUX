            <div class="col-md-10 col-md-offset-2">
                <div class="row">
                    @*phần slider*@
                    <div style="width:100%">
                        <div id="myCarousel" class="carousel slide an phai" data-ride="carousel">
                            <!-- Indicators -->
                            <ol class="carousel-indicators">
                                @for (int i = 0; i < ViewBag.slider1.Count; i++)
                                {
                                    if (i == 0)
                                    {
                                        <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                                    }
                                    else
                                    {
                                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                                    }
                                }
                            </ol>

                            <!-- Wrapper for slides -->
                            <div class="carousel-inner">
                                @for (int i = 0; i < ViewBag.slider1.Count; i++)
                                {
                                    if (i == 0)
                                    {
                                        <div class="item active">
                                            <img src="~/Images/Slider/@ViewBag.slider1[i].Image" style="width:100%;">
                                            <div class="carousel-caption">
                                                @*<h3 class="animated bounceInLeft">Los Angeles</h3>
                                                    <p class="animated bounceInRight">LA is always so much fun!</p>*@
                                            </div>
                                        </div>
                                    }
