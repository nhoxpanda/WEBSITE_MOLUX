@using MOLUX.Helper
@using MOLUX.Models
@model ContactViewModel
@{
    var config = ConfigWebsite.Data();
    ViewBag.Title = "Liên hệ | " + config.MetaTitle;
}

@section styles{
    <style>
        .desc-contact {
            font-size: 13px;
            line-height: 20px;
        }

        .proud-contact {
            font-size: 20px;
            line-height: 20px;
        }
    </style>
}

<!--Breadcrumb-->
<div class="row">
    <ol class="breadcrumb">
        <li><a itemprop="url" title="Trang chủ"><span itemprop="title">Trang chủ</span></a></li>
        <li><a itemprop="url" href="/lien-he" title="Liên hệ"><span itemprop="title">Liên hệ</span></a></li>
    </ol>
</div>
<!--End Breadcrumb-->

<div class="row bg-white">
    <div class="col-md-offset-4 col-md-4">
        <img src="~/Images/Logo/logo MOLUX (nen trang).png" class="img img-responsive" style="margin: 20px 0" />
    </div>
    <div class="col-md-offset-2 col-md-8">
        <div class="form-group">
            <label class="desc-contact">
                <strong>Với lợi thế, Chúng tôi có thể cung cấp từ thiết kế tới yêu cầu đa dạng, phù hợp với các nhu cầu khác nhau của các đối tác trên toàn quốc. Để biết thêm thông tin chi tiết, vui lòng liên hệ với chúng tôi. Molux sẵn sàng hợp tác với bạn:</strong>
            </label>
        </div>
    </div>
    <div class="col-md-offset-2 col-md-8" id="contact-info">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-12 contact-title">
                        <strong><i class="fa fa-fire"></i>&nbsp; @Model.Showroom.Name</strong>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-map-marker"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.Showroom.Address</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-phone"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.Showroom.Mobile - @Model.Showroom.Phone</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-envelope"></i></label>
                    <label class="col-md-10 col-xs-10"><a href="mailto:@Model.Showroom.Email" target="_blank">@Model.Showroom.Email</a></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-12 contact-title">
                        <strong><i class="fa fa-fire"></i>&nbsp; @Model.Online.Name</strong>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-map-marker"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.Online.Address</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-phone"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.Online.Mobile - @Model.Online.Phone</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-envelope"></i></label>
                    <label class="col-md-10 col-xs-10"><a href="mailto:@Model.Online.Email" target="_blank">@Model.Online.Email</a></label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-12 contact-title">
                        <strong><i class="fa fa-fire"></i>&nbsp; @Model.Project.Name</strong>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-map-marker"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.Project.Address</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-phone"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.Project.Mobile - @Model.Project.Phone</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-envelope"></i></label>
                    <label class="col-md-10 col-xs-10"><a href="mailto:@Model.Project.Email" target="_blank">@Model.Project.Email</a></label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-12 contact-title">
                        <strong><i class="fa fa-fire"></i>&nbsp; @Model.Building.Name</strong>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-map-marker"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.Building.Address</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-phone"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.Building.Mobile - @Model.Building.Phone</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-envelope"></i></label>
                    <label class="col-md-10 col-xs-10"><a href="mailto:@Model.Building.Email" target="_blank">@Model.Building.Email</a></label>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="col-md-12 contact-title">
                        <strong><i class="fa fa-fire"></i>&nbsp; ĐỊA CHỈ SHOWROOM TRƯNG BÀY</strong>
                    </label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-12 contact-title">
                        <strong><i class="fa fa-lightbulb-o"></i>&nbsp; @Model.HongKong.Name</strong>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-map-marker"></i></label>
                    <label class="col-md-10 col-xs-10">
                        @Model.HongKong.Address
                        <a href="@config.GoogleMap1" title="@config.Address1" target="_blank" style="color: #e6c804 !important; display: inline">(Bản đồ)</a>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-phone"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.HongKong.Mobile - @Model.HongKong.Phone</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-clock-o"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.HongKong.OpenTime</label>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-md-12 contact-title">
                        <strong><i class="fa fa-lightbulb-o"></i>&nbsp; @Model.VietNam.Name</strong>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-map-marker"></i></label>
                    <label class="col-md-10 col-xs-10">
                        @Model.VietNam.Address
                        <a href="@config.GoogleMap1" title="@config.Address1" target="_blank" style="color: #e6c804 !important; display: inline">(Bản đồ)</a>
                    </label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-phone"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.VietNam.Mobile - @Model.VietNam.Phone</label>
                </div>
                <div class="form-group">
                    <label class="col-md-2 col-xs-2 control-label"><i class="fa fa-clock-o"></i></label>
                    <label class="col-md-10 col-xs-10">@Model.VietNam.OpenTime</label>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-offset-2 col-md-8">
        <div class="form-group">
            <label class="proud-contact">
                <strong>TỰ HÀO HƠN 25 NĂM KINH NGHIỆM VÀ PHÁT TRIỂN BỀN VỮNG!</strong>
            </label>
        </div>
    </div>
</div>

<div id="modal-contact" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><strong>LIÊN HỆ VỚI MOLUX</strong></h4>
            </div>
            @using (Ajax.BeginForm("Contact", "Home", null, new AjaxOptions { OnSuccess = "OnSuccessContact" }))
            {
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2"></label>
                            <div class="col-md-10 col-lg-10">
                                <strong><i><span class="red2">(*)</span> bắt buộc nhập</i></strong>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2">Họ tên: <span class="red2">(*)</span></label>
                            <div class="col-md-10 col-lg-10">
                                <input type="text" class="form-control" name="txtName" id="txtName" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2">Điện thoại: <span class="red2">(*)</span></label>
                            <div class="col-md-10 col-lg-10">
                                <input type="text" class="form-control" name="txtPhone" id="txtPhone" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2">Email: <span class="red2">(*)</span></label>
                            <div class="col-md-10 col-lg-10">
                                <input type="text" class="form-control" name="txtEmail" id="txtEmail" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 col-lg-2">Thông điệp:</label>
                            <div class="col-md-10 col-lg-10">
                                <textarea class="form-control" id="txtNote" name="txtNote"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" name="btnSend"><i class="fa fa-send"></i>Gửi</button>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    <script>
        function OnSuccessContact() {
            $.notify("Cảm ơn bạn đã liên hệ với chúng tôi!", { animationType: "scale", color: "#fff", background: "#00C907", icon: "check" });
            $("#modal-contact").modal("hide");
        }
    </script>
}