@model MOLUX.Models.Item
<div class="modal fade" id="updateSizeColor" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Update</h4>
            </div>
            <div class="modal-body">

                <div class="form-horizontal">
                    <div class="form-group">
                            <label class="col-md-12">Chọn Size</label>
                        <div class="col-md-12">
                            <select name="SideCode" id="SideCode" class="form-control">
                                @foreach (var item in ViewBag.Size_Code)
                                {
                                    if (item.Note == Model.Size_Code)
                                    {
                                        <option value="@item.Note" selected>@item.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Note">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">

                        <label class="col-md-12">Chọn Color</label>

                        <div class="col-md-12">
                            <select name="ColorCode" id="ColorCode" class="form-control">
                                @foreach (var item in ViewBag.Color_Code)
                                {
                                    if (item.Note == Model.Color_Code)
                                    {
                                        <option value="@item.Note" selected>@item.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Note">@item.Name</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="UpdateCodeColorSize(@Model.RowID)" id="SaveColorSize">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
</div>
